<h4>Your Cart</h4>
<% @cart.each do |product_id| %>
  <% p = Product.find(product_id) %>
  <img src=<%= p[:image_url] %> alt="image" height="100" width="100">
  <%= p[:name] %>
  $<%= p[:price].to_f.round(2) %>
  <%= form_tag remove_item_path do %>
    <%= hidden_field_tag :id, p[:id] %>
    <%= submit_tag "Remove From Cart" %>
  <% end %>
  <br>
<% end %>
Total Price:
<% total_price = 0.00 %>
<% @cart.each do |product_id| %>
  <% p = Product.find(product_id) %>
  <% total_price += p[:price].to_f.round(2) %>
<% end %>
$<%= total_price.round(2) %>

<%= link_to "Checkout", new_order_path %>
